---
layout: base.liquid
---

<main class="home">

    <header >
        <div class="background"
        style="background-image: url({{header-image}})">
        </div>
        <h2>{{headertitle}}</h2>
        <p>{{headercontent}}</p>
    </header>

    <section class="news length-{{collections.newsrev.length}}">
        <article class="openinghours">
            <h3>{{openinghours-title}}</h3>
            <p>{% for row in openinghours %}<div>{{row}}</div>{%endfor%}</p>
        </article>
        
        {% for article in collections.newsrev %}
            <article class="article" onclick="window.location.href='{{article.url}}'">
                <span class="date">{{article.date | dateformat }}</span>         
                
                <h3>{{article.data.title}}</h3>
                <p>{% if article.data.page.excerpt %}
                        {{-article.data.page.excerpt}}
                    {% else %}
                        {{-article.data.content}}
                    {% endif %}
                </p>
            </article>
        {% endfor %}
    </section>
    
    <section class="centered about">
        {{content}}
    </section>

    {% comment %} <section class="opentable"  style="background-image: url({{opentable_image}})">
        <h2>{{opentable}}</h2>
    </section> {% endcomment %}

    <section class="teaser">
        {% comment %} <h2>{{teaser-headline}}</h2> {% endcomment %}
        <div class="grid">
            {% for item in teasers%}
                <div class="item" style="background-image: url({{item.image}})" onclick="window.location='{{item.url}}'">
                    <span>{{item.name}}</span>
                </div>
            {% endfor %}
        </div>
    </section>

    {% include _maps.liquid %}
    
</main>

