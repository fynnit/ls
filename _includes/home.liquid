---
layout: base.liquid
---

<main class="home">

    <header >
        <div class="background"
        style="background-image: url({{header-image}})">
        </div>
        <h2>{{headertitle}}</h2>
        <p>{{headercontent}}</p>
    </header>

    <section class="news">
        <article class="openinghours">
            <h3>{{openinghours-title}}</h3>
            <p>{{-openinghours }}</p>
        </article>
        
        {% for article in collections.newsrev %}
            <article class="article" onclick="window.location.href='{{article.url}}'">
                <span class="date">{{article.date | dateformat }}</span>         
                
                <h3>{{article.data.title}}</h3>
                <p>{% if article.data.page.excerpt %}
                        {{-article.data.page.excerpt}}
                    {% else %}
                        {{-article.data.content}}
                    {% endif %}
                </p>
            </article>
        {% endfor %}
    </section>
    
    <section class="centered about">
        {{content}}
    </section>

    <section class="opentable"  style="background-image: url({{opentable_image}})">
        <h2>{{opentable}}</h2>
    </section>

    <section class="teaser">
        <h2>{{teaser-headline}}</h2>
        <div class="grid">
            {% for item in teasers%}
                <div class="item" style="background-image: url({{item.image}})" onclick="window.location='{{item.url}}'"><span>{{item.name}}</span></div>
            {% endfor %}
        </div>
    </section>

    {% include _maps.liquid %}
    
</main>

